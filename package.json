{
  "name": "shipstatus-pro",
  "version": "1.0.0",
  "description": "ShipStatus Pro - Order and Shipping Management Application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "server": "node src/server/index.js",
    "dev:all": "concurrently -k \"npm run dev\" \"npm run server\"",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package-win": "electron-packager . shipstatus-pro --platform=win32 --arch=x64 --out=dist --icon=public/icons/app-icon.ico --overwrite"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@lottiefiles/react-lottie-player": "^3.5.3",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron": "^29.0.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "fs-extra": "^11.3.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.508.0",
    "mysql2": "^3.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "semver": "^7.7.2",
    "sequelize": "^6.35.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "sqlite3": "^5.1.7",
    "util": "^0.12.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron-icon-maker": "^0.0.5",
    "electron-packager": "^17.1.2",
    "electron-reload": "^1.5.0",
    "vite": "^5.0.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.ticking-rma.app",
    "productName": "TICKING-RMA",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "public/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icons/app-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
